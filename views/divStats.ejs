<%- include('header'); -%>

  <div class="container mt-3">
    <div class="alert alert-primary" role="alert">
      <h3><%= ticker %></h3>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Year</th>
          <% netIncome.forEach(function(e){ %>
          <th scope="col"><%= e['year'] %></th>
          <% }) %>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">Net Income</th>
          <% netIncome.forEach(function(e){ %>
          <td><%= e['netIncome'].toLocaleString() %></td>
          <% }) %>
        </tr>

        <tr>
          <th scope="row">Operating Cashflow</th>
          <% operatingCashflow.forEach(function(e){ %>
          <td><%= e['operatingCashflow'].toLocaleString() %></td>
          <% }) %>
        </tr>

        <tr>
          <th scope="row">Cash & Cash Equivalents</th>
          <% cash.forEach(function(e){ %>
          <td><%= e['cash'].toLocaleString() %></td>
          <% }) %>
        </tr>

        <tr>
          <th scope="row">Debt Repayment Capacity</th>
          <% debtRepaymentRatio.forEach(function(e){ %>
          <td><%= e['debtRepaymentRatio'] %></td>
          <% }) %>
        </tr>
      </tbody>
    </table>

    <br />

    <div id="divYield" class="alert alert-secondary" role="alert">
      Dividend Yield: <%= (divYield*100).toFixed(2) + '%' %>
    </div>

    <div class="alert alert-secondary" role="alert">
      Dividend Growth Rate 5Y: <%= (divGrowth*100).toFixed(2) + '%' %>
    </div>

    <div class="alert alert-secondary" role="alert">
      Dividend Payout Ratio: <%= (divPayoutRatio*100).toFixed(2) + '%' %>
    </div>

    <div class="alert alert-secondary" role="alert">
      Return on Equity: <%= (returnOnEquity*100).toFixed(2) + '%' %>
    </div>

    <br />

    <table class="table table-striped">
      <tbody>
        <tr>
          <th scope="row">Purchases</th>
          <td><%= insiderAction['purchase']['volume'].toLocaleString() %></td>
          <td><%= insiderAction['purchase']['transactions'] %></td>
        </tr>
        <tr>
          <th scope="row">Sales</th>
          <td><%= insiderAction['sales']['volume'].toLocaleString() %></td>
          <td><%= insiderAction['sales']['transactions'] %></td>
        </tr>
        <tr>
          <th scope="row">Held</th>
          <td colspan="2"><%= insiderAction['held'].toLocaleString() %></td>
        </tr>
        <tr>
          <th scope="row">Shares Percent Sold</th>
          <td colspan="2">
            <%= (insiderAction['sharesPercentSold']*100).toFixed(2) + '%' %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

<%- include('footer'); -%>

